{
  "name": "woorkroom_be",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",

    "docker:build": "docker compose -p woorkroom_be build",
    "docker:rebuild": "docker compose -p woorkroom_be build --no-cache",
    "docker:up": "docker compose -p woorkroom_be up -d",
    "docker:up:build": "docker compose -p woorkroom_be up -d --build",
    "docker:down": "docker compose -p woorkroom_be down",
    "docker:down:vol": "docker compose -p woorkroom_be down -v",
    "docker:ps": "docker compose -p woorkroom_be ps",
    "docker:logs": "docker compose -p woorkroom_be logs -f api",
    "docker:logs:all": "docker compose -p woorkroom_be logs -f",
    "docker:restart": "docker compose -p woorkroom_be restart api",
    "docker:sh:api": "docker compose -p woorkroom_be exec api sh",
    "docker:sh:pg": "docker compose -p woorkroom_be exec postgres sh",

    "prisma:migrate:init": "docker compose -p woorkroom_be run --rm --no-deps -v \"$(pwd)/prisma:/app/prisma\" api sh -lc 'npx prisma migrate dev -n init --skip-generate'",
    "prisma:migrate:new": "docker compose -p woorkroom_be run --rm --no-deps -v \"$(pwd)/prisma:/app/prisma\" api sh -lc 'npx prisma migrate dev -n ${npm_config_name:-change} --skip-generate'",
    "prisma:deploy": "docker compose -p woorkroom_be run --rm --no-deps api sh -lc 'npx prisma migrate deploy --schema=prisma/schema.prisma'",
    "prisma:generate": "docker compose -p woorkroom_be run --rm --no-deps api sh -lc 'npx prisma generate'",
    "prisma:studio": "docker compose -p woorkroom_be run --rm --no-deps -p 5555:5555 api sh -lc 'npx prisma studio --port 5555 --browser none'",
    "db:psql": "docker compose -p woorkroom_be exec -it postgres psql -U postgres -d woorkroom"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.879.0",
    "@aws-sdk/s3-request-presigner": "^3.879.0",
    "@nestjs/bullmq": "^11.0.3",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.15.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "argon2": "^0.44.0",
    "bullmq": "^5.58.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "nestjs-pino": "^4.4.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.15.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
