generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  MANAGER
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName  String
  lastName   String?
  phone     String?
  address   String?
  avatar    Json?
  onboarding       Json?
  company          Json?
  invitesDraft     Json?
  role      Role     @default(USER)
  phoneVerified    Boolean  @default(false)
  phoneVerifiedAt  DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}